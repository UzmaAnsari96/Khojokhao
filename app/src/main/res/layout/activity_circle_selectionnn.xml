<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_circle_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/hdr"
        android:background="#52A905"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/logo"
            android:id="@+id/reficn"
            android:onClick="bk"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/hdrmain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:text="Select City Name"
            android:layout_toRightOf="@+id/reficn"
            android:textColor="#FFFFFF"
            android:textSize="19dp" />



    </RelativeLayout>



    <EditText
        android:id="@+id/txtSearch_Circle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/hdr"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:paddingLeft="10dp"
        android:hint="Search"
        android:drawableRight="@android:drawable/ic_menu_search"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/textViewcircle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text=""
        android:visibility="gone"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listCircleSelection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textViewcircle"
        android:scrollbars="none"/>
</LinearLayout>
